<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Màu nền khi nút được nhấn -->
            <corners android:radius="10dp" /> <!-- Bo tròn các góc của nút -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6699" /> <!-- Màu nền mặc định của nút -->
            <corners android:radius="10dp" /> <!-- Bo tròn các góc của nút -->
        </shape>
    </item>
</selector>
